@model MemoryAudio.Models.Admin.AddUserModel

@{
    ViewBag.Title = "Tạo tài khoản";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
        </h1>
    </section>
    <!-- Main content -->
    <section class="content">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="col-md-6" style="padding-left:0px;">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Nhập thông tin tài khoản</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="form-group text-danger">
                            @Html.ValidationSummary()
                        </div>
                        <div class="form-group">
                            <label for="Username">Tên đăng nhập</label>
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="Password">Mật khẩu</label>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="PasswordConfirm">Xác nhận mật khẩu</label>
                            @Html.EditorFor(model => model.PasswordConfirm, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                            @Html.ValidationMessageFor(model => model.PasswordConfirm, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group" style="margin-top:24px;">
                            <label for="FullName">Họ tên</label>
                            @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="Phone">Điện thoại</label>
                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="Username">Email</label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="Status">Trạng thái</label>
                            @Html.DropDownListFor(model => model.Status, Model.StatusSelector, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <div class="col-md-6" style="padding-left:0px;">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Chức danh</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        @for(int i=0; i<Model.RoleSelector.Count; i++)
                        {
                            <div class="form-group">
                                @Html.HiddenFor(model => model.RoleSelector[i].RoleId)
                                @Html.HiddenFor(model => model.RoleSelector[i].RoleName)
                                @Html.CheckBoxFor(model => model.RoleSelector[i].Selected) @Model.RoleSelector[i].RoleName
                            </div>
                        }
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
            <div class="col-lg-12" style="padding-left:0px;">
                <button type="submit" class="btn btn-sm btn-success" style="width:100px;">Cập nhật</button>
                <button type="reset" class="btn btn-sm btn-warning" style="width:100px;">Nhập lại</button>
                <a href="javascript:window.history.back();" class="btn btn-sm btn-primary" style="width:100px;">Trở về</a>
            </div>
        }
        <div class="clearfix"></div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section scripts {
    <script>
        $(document).ready(function () {
            // Active system menu
            $(".nav-system").addClass("menu-open");
            $(".nav-system > ul").show();
        });
    </script>
}