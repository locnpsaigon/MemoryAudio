@model MemoryAudio.Models.Admin.ChangePasswordModel

@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="col-md-6" style="padding-left:0px;">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">@ViewBag.Title</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="form-group text-danger">
                            @Html.ValidationSummary()
                        </div>
                        <div class="form-group">
                            <label for="OldPassword">Mật khẩu hiện tại</label>
                            @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                            @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group" style="margin-top:24px;">
                            <label for="NewPassword">Mật khẩu mới</label>
                            @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group" style="margin-top:24px;">
                            <label for="NewPasswordConfirm">Xác nhận mật khẩu mới</label>
                            @Html.EditorFor(model => model.NewPasswordConfirm, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                            @Html.ValidationMessageFor(model => model.NewPasswordConfirm, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <div class="col-lg-12" style="padding-left:0px;">
                <button type="submit" class="btn btn-sm btn-success" style="width:100px;">Đổi mật khẩu</button>
                <a href="javascript:window.history.back();" class="btn btn-sm btn-primary" style="width:100px;">Trở về</a>
            </div>
        }
        <div class="clearfix"></div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section scripts {
    <script>
        $(document).ready(function () {
            // Active system menu
            $(".nav-system").addClass("menu-open");
            $(".nav-system > ul").show();
        });
    </script>
}

